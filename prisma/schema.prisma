generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(uuid())
    first_name String
    last_name  String
    role       Role     @default(USER)
    email      String   @unique()
    is_checked Boolean  @default(false)
    password   String
    created_at DateTime @default(now())
    updated_at DateTime @default(now())

    categories Category[]
    items      Item[]

    @@map("users")
}

model Item {
    id          Int      @id @default(autoincrement())
    user_id     String
    title       String
    note        String
    value       Float
    category_id Int
    created_at  DateTime @default(now())
    updated_at  DateTime @default(now())

    user       User?     @relation(fields: [user_id], references: [id])
    categories Category? @relation(fields: [id], references: [id], onDelete: Cascade)

    @@map("items")
}

model Category {
    id         Int      @id @default(autoincrement())
    user_id    String
    name       String
    type       String
    created_at DateTime @default(now())
    updated_at DateTime @default(now())

    user  User?  @relation(fields: [user_id], references: [id], onDelete: Cascade)
    items Item[]

    @@map("categories")
}

enum Role {
    USER
    ADMIN
}
