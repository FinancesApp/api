{
  "name": "api",
  "version": "1.0.0",
  "description": "The API for the Finances App.",
  "main": "./build/cluster.js",
  "scripts": {
    "clean": "rimraf ./build",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "husky:pc": "lint-staged",
    "husky:pcm": "exec < /dev/tty && git-cz --hook || true",
    "dev": "nodemon ./src/server.ts",
    "build": "npm run clean && npm run prisma:deploy && tsc --project ./tsconfig.json",
    "start": "node .",
    "test": "jest",
    "test:perf": "npx autocannon --renderStatusCode -d 30 -c 1000 http://localhost:4000"
  },
  "keywords": [
    "api",
    "server",
    "financesapp",
    "prisma",
    "postgres",
    "typescript"
  ],
  "author": "Tiago Ryan <tiagoinsany@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@swc/core": "^1.2.189",
    "@swc/jest": "^0.2.21",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "autocannon": "^7.9.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.6",
    "nodemon": "^2.0.16",
    "prisma": "^3.15.0",
    "rimraf": "^3.0.2",
    "sucrase": "^3.21.0",
    "supertest": "^6.2.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "^3.15.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
