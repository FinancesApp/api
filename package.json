{
  "name": "api",
  "version": "1.0.0",
  "description": "The Api for manager the authentication.",
  "main": "./build/server.js",
  "scripts": {
    "clean": "rimraf ./build",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "husky:pc": "lint-staged",
    "husky:pcm": "exec < /dev/tty && git-cz --hook || true",
    "dev": "npm run prisma:dev && ts-node-dev --respawn --transpile-only --ignore-watch ./node_modules ./src/server.ts",
    "build": "npm run clean && npm run prisma:deploy && tsc --project ./tsconfig.json",
    "start": "node ."
  },
  "keywords": [],
  "author": "Tiago Ryan <tiagoinsany@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^6.0.0",
    "@types/express-slow-down": "^1.3.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.6",
    "prisma": "^3.11.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.3.0",
    "express-slow-down": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
